{{>layouts/header}}
<div class="container">
    <p>이 페이지는 리스트 페이지입니다.</p>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Title</th>
            <th scope="col">Content</th>
        </tr>
        </thead>
        <tbody class="table-group-divider">
        {{#articles}}
            <tr>
                <th>{{id}}</th>
                <td><a href="/articles/{{id}}">{{title}}</a></td>
                <td>{{content}}</td>
            </tr>
        {{/articles}}
        </tbody>
    </table>
    <button type="button" class="btn btn-primary"><a href="/articles/new">새글 작성</a></button>
    <button type="button" class="btn btn-primary"><a href="/articles">글목록</a></button>
</div>
{{>layouts/footer}}